#!/usr/bin/env sh
. "$(dirname "$0")/h"

message="$(cat $1)"
requiredPattern="^(feat|fix|refactor|chore|docs|design):.*$"
if ! [[ $message =~ $requiredPattern ]];
then
  echo "=========================================================================="
  echo "=================   ðŸš¨ ì»¤ë°‹ ë©”ì‹œì§€ë¥¼ ìˆ˜ì •í•´ ì£¼ì„¸ìš” ðŸš¨   =================="
